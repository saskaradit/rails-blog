
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article,local: true)  do |f| %>
        <div class="form-group row">
            <%= f.label :title, class:"col-2 col-form-label" %> 
            <div class="col-10">
              <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :description, class:"col-2 col-form-label" %> 
             <div class="col-10">
              <%= f.text_area :description , rows: 10, class: "form-control", placeholder: "Description of article" %>
            </div>
        </div>
        <div class="form-group row justify-content-center">
          <%=f.submit class:"btn btn-primary"%>
        </div>
      <%end%>
      <%= link_to 'Back', articles_path%> 
      <% if @article.errors.any?%>
        <h5><%= @article.errors.full_messages[0]%></h5>
      <%end%>
    </div>
  </div>
</div>